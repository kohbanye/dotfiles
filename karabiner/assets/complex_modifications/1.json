{
  "title": "use 'option + [;'[/]' for arrow keys (left, right, up, down)",
  "rules": [
    {
      "description": "use 'option + [;'[/]' for arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": {
            "key_code": "left_arrow"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": {
            "key_code": "right_arrow"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": {
            "key_code": "up_arrow"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": {
            "key_code": "down_arrow"
          }
        }
      ]
    }
  ]
}